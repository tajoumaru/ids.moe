# ids.moe Pipeline Environment Variables
# Copy this file to .env and fill in your values

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL (Neon) Database URL (REQUIRED)
# Format: postgresql://username:password@host:port/database
# Use the non pooling psql connection string from neon.
# Make sure to use `postgresql://` and NOT `postgres://` for the protocol
DATABASE_URL=''

# ==============================================================================
# CLOUDFLARE CONFIGURATION
# ==============================================================================

# Your account id on cloudflare.
# Can be found here: https://developers.cloudflare.com/fundamentals/account/find-account-and-zone-ids/#find-account-id-workers-and-pages
CLOUDFLARE_ACCOUNT_ID=''

# The KV Namespace ID can be found on the relevant KV page next to it's name
CLOUDFLARE_KV_NAMESPACE_ID=''

# This auth token will need to be generated. Use the worker edit template.
CLOUDFLARE_AUTH_TOKEN=''

# ==============================================================================
# CACHE CONFIGURATION
# ==============================================================================

# Directory for cached downloaded files
CACHE_DIR=cache

# Number of days to cache scraper data before re-running
SCRAPER_CACHE_EXPIRY_DAYS=14

# ==============================================================================
# GITHUB API CONFIGURATION
# ==============================================================================

# GitHub Personal Access Token (optional but recommended)
# Helps avoid rate limiting when downloading files from GitHub
# Generate at: https://github.com/settings/tokens
GITHUB_TOKEN=''

# ==============================================================================
# SCRAPER AUTHENTICATION
# ==============================================================================

# ------------------------------------------------------------------------------
# Kaize Scraper Configuration
# ------------------------------------------------------------------------------
# All four variables are required to enable Kaize data collection
# The pipeline will work without these, but won't include Kaize anime IDs

# Kaize login email
KAIZE_EMAIL=''

# Kaize login password
KAIZE_PASSWORD=''
