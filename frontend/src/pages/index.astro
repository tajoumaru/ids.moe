---
import SiteLayout from "../layouts/SiteLayout.astro";
---

<SiteLayout>
    <div class="relative overflow-hidden">
        <!-- Hero Section -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
            <div class="text-center">
                <h1
                    class="text-5xl sm:text-6xl font-extrabold text-gray-900 dark:text-gray-100 tracking-tight"
                >
                    <span class="block pb-3">High-Performance</span>
                    <span
                        class="block bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text text-transparent pb-3"
                    >
                        Anime ID Mapping API
                    </span>
                </h1>
                <p
                    class="mt-6 text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto"
                >
                    Blazingly fast RESTful API providing anime relation mapping
                    across 21+ anime databases. Get cross-platform IDs with ~8ms
                    response times.
                </p>
                <div class="mt-10 flex justify-center gap-4 flex-wrap">
                    <a
                        href="/docs"
                        class="px-8 py-3 bg-white dark:bg-gray-800 text-purple-600 dark:text-purple-400 font-semibold rounded-lg border-2 border-purple-600 dark:border-purple-400 hover:bg-purple-50 dark:hover:bg-gray-700 transition-colors"
                    >
                        API Documentation
                    </a>
                    <a
                        href="/login"
                        class="px-8 py-3 bg-purple-600 text-white font-semibold rounded-lg hover:bg-purple-700 transition-colors"
                    >
                        Get API Key
                    </a>
                </div>
            </div>
        </div>

        <!-- Stats Section -->
        <div class="bg-purple-50 dark:bg-gray-800 py-12">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
                    <div>
                        <div class="text-3xl font-bold text-purple-600">
                            ~8ms
                        </div>
                        <div
                            class="text-sm text-gray-600 dark:text-gray-400 mt-1"
                        >
                            Response Time
                        </div>
                    </div>
                    <div>
                        <div class="text-3xl font-bold text-purple-600">
                            21+
                        </div>
                        <div
                            class="text-sm text-gray-600 dark:text-gray-400 mt-1"
                        >
                            Platforms
                        </div>
                    </div>
                    <div>
                        <div class="text-3xl font-bold text-purple-600">
                            300k+
                        </div>
                        <div
                            class="text-sm text-gray-600 dark:text-gray-400 mt-1"
                        >
                            Anime Mappings
                        </div>
                    </div>
                    <div>
                        <div class="text-3xl font-bold text-purple-600">
                            100x
                        </div>
                        <div
                            class="text-sm text-gray-600 dark:text-gray-400 mt-1"
                        >
                            Faster than v1
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Try It Section -->
        <div id="try-it" class="py-16 bg-white dark:bg-gray-900">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <h2
                    class="text-3xl font-bold text-center text-gray-900 dark:text-gray-100 mb-12"
                >
                    Try It Now
                </h2>

                <div class="max-w-4xl mx-auto">
                    <div class="bg-gray-900 rounded-lg p-6">
                        <div class="text-green-400 font-mono text-sm mb-2">
                            # Get all platform IDs for Cowboy Bebop (MAL ID: 1)
                            [Only `/mal/1` is public/supported without API-key]
                        </div>
                        <div class="text-gray-300 font-mono">
                            curl https://api.ids.moe/mal/1
                        </div>
                    </div>

                    <div
                        class="mt-6 bg-gray-50 dark:bg-gray-800 rounded-lg p-6 overflow-x-auto"
                    >
                        <pre
                            class="text-sm"><code>{`{
  "title": "Cowboy Bebop",
  "anidb": 23,
  "anilist": 1,
  "animeplanet": "cowboy-bebop",
  "kitsu": 1,
  "myanimelist": 1,
  "shikimori": 1,
  "simkl": 37089,
  "trakt": 30857,
  ...
}`}</code></pre>
                    </div>
                </div>
            </div>
        </div>

        <!-- Supported Platforms -->
        <div class="py-16 bg-gray-50 dark:bg-gray-800">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <h2
                    class="text-3xl font-bold text-center text-gray-900 dark:text-gray-100 mb-12"
                >
                    Supported Platforms
                </h2>
                <div
                    class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4"
                >
                    {
                        [
                            "MyAnimeList",
                            "AniList",
                            "AniDB",
                            "Kitsu",
                            "Anime-Planet",
                            "AniSearch",
                            "Annict",
                            "IMDB",
                            "Kaize",
                            "LiveChart",
                            "Nautiljon",
                            "Notify.moe",
                            "Otakotaku",
                            "Shikimori",
                            "Shoboi",
                            "Silver Yasha",
                            "Simkl",
                            "TMDB",
                            "Trakt",
                            "AnimeNewsNetwork",
                        ].map((platform) => (
                            <div class="bg-white dark:bg-gray-700 rounded-lg px-4 py-3 text-center shadow-sm border border-gray-200 dark:border-gray-600">
                                <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                                    {platform}
                                </span>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>

        <!-- Features -->
        <div class="py-16 bg-white dark:bg-gray-900">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <h2
                    class="text-3xl font-bold text-center text-gray-900 dark:text-gray-100 mb-12"
                >
                    Why ids.moe?
                </h2>
                <div class="grid md:grid-cols-3 gap-8">
                    <div class="text-center">
                        <div
                            class="w-16 h-16 bg-purple-100 dark:bg-purple-900/30 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <svg
                                class="w-8 h-8 text-purple-600 dark:text-purple-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                        </div>
                        <h3
                            class="text-xl font-semibold mb-2 text-gray-900 dark:text-gray-100"
                        >
                            Lightning Fast
                        </h3>
                        <p class="text-gray-600 dark:text-gray-400">
                            Edge-deployed with Cloudflare Workers for ~8ms
                            response times globally
                        </p>
                    </div>
                    <div class="text-center">
                        <div
                            class="w-16 h-16 bg-purple-100 dark:bg-purple-900/30 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <svg
                                class="w-8 h-8 text-purple-600 dark:text-purple-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7"
                                ></path>
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4-3.582-4-8-4-8 1.79-8 4z"
                                ></path>
                            </svg>
                        </div>
                        <h3
                            class="text-xl font-semibold mb-2 text-gray-900 dark:text-gray-100"
                        >
                            Always Updated
                        </h3>
                        <p class="text-gray-600 dark:text-gray-400">
                            Nightly automated updates ensure the latest anime
                            mappings
                        </p>
                    </div>
                    <div class="text-center">
                        <div
                            class="w-16 h-16 bg-purple-100 dark:bg-purple-900/30 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <svg
                                class="w-8 h-8 text-purple-600 dark:text-purple-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
                                ></path>
                            </svg>
                        </div>
                        <h3
                            class="text-xl font-semibold mb-2 text-gray-900 dark:text-gray-100"
                        >
                            Open Source
                        </h3>
                        <p class="text-gray-600 dark:text-gray-400">
                            AGPL-3.0 licensed with full source code available on
                            GitHub
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- CTA Section -->
        <div class="bg-gradient-to-r from-purple-600 to-blue-600 py-16">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                <h2 class="text-3xl font-bold text-white mb-4">
                    Ready to Get Started?
                </h2>
                <p class="text-xl text-purple-100 mb-8">
                    Sign up to get your API key and start mapping anime IDs
                </p>
                <a
                    href="/login"
                    class="inline-block px-8 py-3 bg-white text-purple-600 font-semibold rounded-lg hover:bg-gray-100 transition-colors"
                >
                    Get Your API Key
                </a>
            </div>
        </div>
    </div>
</SiteLayout>
