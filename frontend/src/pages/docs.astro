---
import SiteLayout from "../layouts/SiteLayout.astro";
---

<SiteLayout>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <!-- Header -->
        <div class="text-center mb-4">
            <span
                class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4"
            >
                API Documentation
            </span>
            <p class="text-xl text-gray-600 dark:text-gray-400">
                Interactive documentation for the ids.moe API. Try endpoints
                directly from your browser.
            </p>
        </div>

        <!-- Elements API Documentation -->
        <div
            class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden"
        >
            <elements-api
                apiDescriptionUrl="http://localhost:8787/schema.json"
                router="hash"
                layout="sidebar"
                hideInternal="true"
                tryItCredentialsPolicy="include"></elements-api>
        </div>
    </div>
</SiteLayout>

<!-- Load Elements Web Component -->
<script src="https://unpkg.com/@stoplight/elements/web-components.min.js"
></script>

<style>
    @import url("https://unpkg.com/@stoplight/elements/styles.min.css");
</style>
